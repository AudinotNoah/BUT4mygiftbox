{% extends "layout.html.twig" %}

{% block title %}Catégorie : {{ categorie.libelle }}{% endblock %}

{% block content %}
    <h2>Catégorie : {{ categorie.libelle }}</h2>
    <p>ID : {{ categorie.id }}</p>
    <p>Description : {{ categorie.description|default('N/A') }}</p>
    <p>
        <a href="{{ url_for('prestations_par_categorie', {'id': categorie.id}) }}">
            Voir les prestations
        </a>
    </p>
    <p>
        <a href="{{ url_for('liste_categories') }}">Retour à la liste des catégories</a>
    </p>
{% endblock %}